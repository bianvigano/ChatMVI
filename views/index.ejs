<!DOCTYPE html>
<html lang="id" data-theme="light">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Chat MVI' %></title>
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <header class="app-header">
    <div class="app-brand">
      <h3>CHK Chat</h3>
      <div id="roomTopic" class="muted"></div>
      <div id="roomRules" class="muted small"></div>
    </div>
    <div class="app-actions">
      <input id="searchInput" placeholder="Cari pesan..." />
      <button id="searchBtn">Cari</button>

      <% if (user) { %>
        <span class="muted">Hi, <b><%= user.username %></b></span>
        <form method="post" action="/logout" style="display:inline">
          <button type="submit" id="logoutBtn">Logout</button>
        </form>
        <button type="button" id="openRoomModal">Pilih Room</button>
      <% } else { %>
        <a href="/login"><button type="button" id="openLoginBtn">Masuk</button></a>
        <a href="/register"><button type="button">Daftar</button></a>
      <% } %>
    </div>
  </header>

  <section class="app-layout">
    <aside class="sidebar">
      <h4>Pin</h4>
      <ul id="pinList" class="pin-list"></ul>

      <h4>Pengumuman</h4>
      <div id="announcements"></div>

      <h4>Pengguna</h4>
      <div id="onlineUsers">-</div>
    </aside>

    <main class="chat-main">
      <!-- Panel hasil pencarian -->
      <div id="searchPanel" class="search-panel">
        <div class="panel-head">
          <b>Hasil Pencarian</b>
          <button onclick="document.getElementById('searchPanel').style.display='none'">Tutup</button>
        </div>
        <div id="searchResults"></div>
      </div>

      <!-- Timeline -->
      <div id="messages" class="messages"></div>
      <div id="typingIndicator" class="typing small muted"></div>

      <!-- Reply bar akan dibuat otomatis oleh JS tepat di atas form -->

      <!-- Toolbar -->
      <!-- <div class="toolbar">
        <button id="mdBoldBtn">B</button>
        <button id="mdItalicBtn"><i>I</i></button>
        <button id="mdCodeBtn">`</button>
        <button id="mdBlockBtn">```</button>
        <button id="mdLinkBtn">Link</button>
        <button id="previewToggle">Preview</button>
        <button id="fileBtn">ðŸ“Ž</button>
        <input id="fileInput" type="file" style="display:none" />
      </div> -->

      <!-- Preview -->
      <div id="mdPreview" class="preview" style="display:none"></div>

      <!-- Compose -->
      <form id="form" class="composer">
        <input id="input" autocomplete="off" placeholder="Ketik pesan atau /command â€¦" />
        <button type="submit">Kirim</button>
      </form>
    </main>
  </section>

  <!-- Modal room (opsional). Boleh tanpa tab Global. -->
  <div id="loginModal" class="modal" style="display:none">
    <div class="modal-card">
      <div class="tabs">
        <!-- tombol ini opsional, JS pakai optional chaining -->
        <button id="btnTabGlobal" class="tab">Global</button>
        <button id="btnTabPrivate" class="tab active">Private</button>
      </div>

      <div id="globalPanel" style="display:none">
        <!-- boleh dikosongkan / dihilangkan -->
      </div>

      <div id="privatePanel">
        <form method="post" action="/room/join">
          <label>Room</label>
          <input name="roomId" placeholder="contoh: tim-a" />
          <label>Password</label>
          <input name="password" type="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢" />
          <div class="row" style="margin-top:8px">
            <button type="submit">Masuk Room</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- JS module saja, tanpa inline script -->
  <script type="module" src="/js/main.js"></script>
</body>
</html>
